<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moviedbapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MoviesDBApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieDBApp">
        <activity
            android:name="com.example.moviedbapp.framework.ui.detail.DetalleActivity"
            android:exported="false"
            android:label="@string/title_activity_detalle"
            android:theme="@style/Theme.MovieDBApp.NoActionBar" />
        <activity
            android:name="com.example.moviedbapp.framework.ui.main.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.example.moviedbapp.framework.ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>